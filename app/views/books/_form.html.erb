<%= simple_form_for @book, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@book[:name]) %>
  <%= f.input :author %>
  <%= error_span(@book[:author]) %>
  <%= f.input :shortdesc %>
  <%= error_span(@book[:shortdesc]) %>
  <%= f.input :draft %>
  <%= error_span(@book[:draft]) %>

  <div class="form-group">
    Genres:
    <% Genre.all.each do |genre| %>
      <label>
        <%= check_box_tag "book[genre_ids][]", genre.id, f.object.genres.include?(genre) %>
        <%= genre.name %>
      </label>
    <% end %>
  </div>

  <%= f.input :cover, as: :file %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                books_path, :class => 'btn btn-default' %>
<% end %>
