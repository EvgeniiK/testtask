<%= simple_form_for @book, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@book[:name]) %>
  <%= f.input :author %>
  <%= error_span(@book[:author]) %>
  <%= f.input :shortdesc %>
  <%= error_span(@book[:shortdesc]) %>
  <%= f.input :draft %>
  <%= error_span(@book[:draft]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                books_path, :class => 'btn btn-default' %>
<% end %>
